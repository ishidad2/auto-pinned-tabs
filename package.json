{
  "name": "wxt-starter",
  "description": "Chromeの起動時に、指定したブックマークフォルダのタブを自動的に固定タブとして開きます。毎朝同じタブを手動で開く手間を省き、すぐに作業を開始できます。",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "zip": "wxt zip",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "wxt": "^0.20.6"
  }
}
